<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.csongor.kolozsvari.cocktailbook.View.IngredientListController">
   <center>
      <ScrollPane hbarPolicy="NEVER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="960.0" prefWidth="1280.0">
         <content>
            <GridPane fx:id="ingredienListGridPane" gridLinesVisible="true" style="-fx-background-color: #F1F2EB;">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="256.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="256.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="256.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="256.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="256.0" prefWidth="256.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="240.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="240.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="240.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
            </GridPane>
         </content>
      </ScrollPane>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="50.0" styleClass="header" BorderPane.alignment="CENTER">
         <children>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Label alignment="CENTER" styleClass="headerTitle" text="Ingredient List" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="buttonBack" alignment="CENTER" mnemonicParsing="false" onAction="#handleButtonBackAction" text="Back" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
